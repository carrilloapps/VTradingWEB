rules_version = '2';

// Craft rules based on data in your Storage bucket
// See https://firebase.google.com/docs/storage/security for more information
service firebase.storage {
  match /b/{bucket}/o {
    
    // Perfil de usuario: Solo el dueño puede subir y borrar su foto. 
    // Cualquiera puede ver las fotos de perfil (si se desea que sean públicas).
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Denegar todo lo demás por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
