# Environment
NODE_ENV=development

# VTrading API
VTRADING_API_URL=https://api.vtrading.app
VTRADING_API_KEY=your_api_key

# App URLs
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_GOOGLE_PLAY_URL=https://play.google.com/store/apps/details?id=com.vtrading

# Premium Plan Pricing
NEXT_PUBLIC_PREMIUM_PLAN_PRICE_USD=1.00

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your_vapid_key

# Firebase Admin (Server-side)
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk@your_project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# App URLs
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_GOOGLE_PLAY_URL=https://play.google.com/store/apps/details?id=com.vtrading

# Premium Plan Pricing
NEXT_PUBLIC_PREMIUM_PLAN_PRICE_USD=1.00

# Stripe Payment Gateway
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx

# PayPal Payment Gateway
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Bold.co Payment Gateway (Colombia)
BOLD_API_KEY=your_bold_api_key
BOLD_API_URL=https://sandbox.bold.co/v1

# ePayco Payment Gateway (Latin America)
EPAYCO_PUBLIC_KEY=your_epayco_public_key
EPAYCO_PRIVATE_KEY=your_epayco_private_key
EPAYCO_TEST_MODE=true

# Binance Pay (Use test credentials, not sandbox URL)
BINANCE_PAY_API_KEY=your_binance_api_key
BINANCE_PAY_SECRET_KEY=your_binance_secret_key
BINANCE_PAY_TEST_MODE=true
