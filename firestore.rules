rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función de utilidad para verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Función de utilidad para verificar si el usuario es el dueño del documento
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Reglas para la colección de usuarios
    match /users/{userId} {
      // Un usuario solo puede leer y escribir sus propios datos
      allow read, write: if isOwner(userId);
    }

    // Regla por defecto: denegar todo lo demás
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
